# API Keys
ANTHROPIC_API_KEY=sk-ant-test-key-placeholder
OPENAI_API_KEY=  # Optional
GOOGLE_API_KEY=  # Optional, for Gemini

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ai_learning_platform

# Application Settings
APP_NAME=AI Learning Platform
APP_VERSION=1.0.0
DEBUG=True

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# AI Provider Selection (mock/claude/openai/gemini)
DEFAULT_AI_PROVIDER=mock

# AI Model Configuration (per use case)
MODEL_CHAPTER_GENERATION=mock
MODEL_QUESTION_GENERATION=mock
MODEL_STUDENT_FEEDBACK=mock
MODEL_ANSWER_CHECKING=mock
MODEL_RAG_QUERY=mock
MODEL_TOPIC_VALIDATION=mock

# Token Limits per Use Case
MAX_TOKENS_CHAPTER=4000
MAX_TOKENS_QUESTION=2000
MAX_TOKENS_FEEDBACK=1500
MAX_TOKENS_ANSWER=500
MAX_TOKENS_RAG=1000
MAX_TOKENS_VALIDATION=500

# Generation Settings
TEMPERATURE=0.7

# A/B Testing (optional)
ENABLE_AB_TESTING=False
AB_TEST_PERCENTAGE=0.5

# Mentor Configuration
MENTOR_CHAPTERS_THRESHOLD=3  # Chapters required to unlock mentor
MENTOR_WEAK_SCORE_THRESHOLD=0.7  # Score below which chapter is "weak" (70%)
MODEL_GAP_QUIZ=mock  # AI model for gap quiz generation
MAX_TOKENS_GAP_QUIZ=4000  # Token limit for gap quiz generation